/* Pixel.java */

public class Pixel {

    private int red;
    private int green;
    private int blue;

    public short getRed() {
        return red;
    }

    public short getGreen() {
        return green;
    }

    public short getBlue() {
        return blue;
    }

    public void setPixel(short r, short g, short b) {
        red = r;
        green = g;
        blue = b;
    }
}